<!DOCTYPE html>
<html>
<head>
    <script>
    window.axeptioSettings = {
    clientId: "622a12eda3710ac01d450cb0",
    cookiesVersion: "https://github/clarenceptl/hackaton-fr",
    };
    
    (function(d, s) {
    var t = d.getElementsByTagName(s)[0], e = d.createElement(s);
    e.async = true; e.src = "//static.axept.io/sdk.js";
    t.parentNode.insertBefore(e, t);
    })(document, "script");
    </script>
    <meta charset="UTF-8">
    <title>{% block title %}Wired Beauty{% endblock %}</title>
    {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    {% block stylesheets %}
        {#{{ encore_entry_link_tags('app') }}#}
    {% endblock %}
</head>
<body>
<div class="toast-container" id="myToast" style="position: absolute; top: 40px; right: 10px;">
    {% for type, messages in app.flashes() %}
        {% for message in messages %}
            <div  class="toast align-items-center show text-white {{ type == 'green' ? 'bg-success' : 'bg-danger' }} border-0" role="alert" aria-live="assertive" aria-atomic="true">
                <div class="d-flex">
                    <div class="toast-body">
                        {{message}}
                    </div>
                    <button type="button" class="btn-close me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
                </div>
            </div>
        {% endfor %}
    {% endfor %}
</div>

<nav class="container-fluid">
    <ul class="nav nav-tabs">
        <li class="nav-item"><a class="nav-link active" aria-current="page" href="/">Logo</a></li>
        <li class="nav-item"><a class="nav-link" href="{{ path('default') }}">{{ 'road.home'|trans }}</a></li>
        <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-expanded="false">Langage</a>
            <ul class="dropdown-menu">
                {% for locale in locales %}
                    {% if locale != app.request.locale %}
                        <li class="dropdown-item"><a href="{{ path('change_locale', {'locale': locale}) }}">{{ locale }}</a>
                    {% endif %}
                {% endfor %}
            </ul>
        </li>
        {% if is_granted('ROLE_USER') %}
                <li class="nav-item"><a class="nav-link" href="{{ path('app_logout') }}">DÃ©connexion</a></li>
            {% else %}
                <li class="nav-item"><a class="nav-link" href="{{ path('app_login') }}">Connexion</a></li>
                <li class="nav-item"><a class="nav-link" href="{{ path('app_register') }}">Inscription</a></li>
            {% endif %}
    </ul>
</nav>

<main class="container">
    {% block body %}{% endblock %}
</main>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
<script>
    let element = document.getElementById("myToast");

    // Create toast instance
    let myToast = new bootstrap.Toast(element);
    myToast.show()
</script>
{% block javascripts %}
    {#{{ encore_entry_script_tags('app') }}#}
{% endblock %}
</body>
</html>
